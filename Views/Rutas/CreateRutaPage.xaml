<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BusReservationMauiApp.ViewModels"
             x:Class="BusReservationMauiApp.Views.Rutas.CreateRutaPage">
    
    <ContentPage.BindingContext>
        <viewModels:RutaViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="10" >
            <Label x:Name="HeaderLabel" FontAttributes="Bold" Text="Crear Nueva Ruta" FontSize="20" HorizontalOptions="Center" Margin="10" TextColor="White" />
            <Label Text="Duración:" TextColor="White"  FontSize="16" Margin="8"/>
            <Entry x:Name="OrigenEntry" Placeholder="Origen"  FontSize="16" Margin="8"/>
            <Label Text="Duración:" TextColor="White"  FontSize="16" Margin="8"/>
            <Entry x:Name="DestinoEntry" Placeholder="Destino"  FontSize="16" Margin="8"/>
            <Label Text="Duración:" TextColor="White"  FontSize="16" Margin="8"/>
            <TimePicker x:Name="DuracionPicker" FontSize="16" Margin="8" />
            <Label Text="Hora:" TextColor="White"  FontSize="16" Margin="8"/>
            <TimePicker x:Name="HoraPicker"  FontSize="16" Margin="8"/>
            <Label Text="Fecha:" TextColor="White"  FontSize="16" Margin="8"/>
            <DatePicker x:Name="FechaPicker"  FontSize="16" Margin="8"/>
            <!-- <Button Text="Guardar" Clicked="OnSaveRutaClicked" BackgroundColor="LightGreen" TextColor="Black" Margin="8,50,8,8" /> -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>