<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusReservationMauiApp.Views.BoletoPage"
             xmlns:viewmodels="clr-namespace:BusReservationMauiApp.ViewModels">

    <ContentPage.Content>
        <Grid RowDefinitions=".15*,1.5*">
            <!-- Encabezado -->
            <Grid Grid.Row="0"
                  Padding="10"
                  BackgroundColor="#f5f5f5"
                  ColumnDefinitions="*, Auto">
                <Label Text="Boletos Comprados"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Grid.Column="0" />
            </Grid>

            <!-- Lista de Boletos -->
            <CollectionView Grid.Row="1" ItemsSource="{Binding Reservas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*, Auto">
                            <Frame Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   CornerRadius="10"
                                   Padding="10"
                                   Margin="20,14,20,4"
                                   BackgroundColor="White"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="*, Auto"
                                      RowDefinitions="Auto, Auto, Auto">
                                    <!-- Asiento -->
                                    <Label Text="{Binding Asiento, StringFormat='Asiento: {0}'}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="Black"
                                           Grid.Row="0"
                                           Grid.Column="0" />
                                    <!-- Estado -->
                                    <Label Text="{Binding EstadoReserva}"
                                           FontSize="14"
                                           TextColor="{Binding ColorEstadoReserva}"
                                           Grid.Row="1"
                                           Grid.Column="0" />
                                    <!-- Fecha -->
                                    <Label Text="{Binding FechaReserva, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                                           FontSize="14"
                                           TextColor="Gray"
                                           Grid.Row="2"
                                           Grid.Column="0" />
                                    <!-- QR Code -->
                                    <Image Source="qr_code.jpeg"
                                           HeightRequest="60"
                                           WidthRequest="60"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Grid.Row="0"
                                           Grid.RowSpan="3"
                                           Grid.Column="1">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding MostrarQRCommand}"
                                                                  CommandParameter="{Binding .}" />
                                        </Image.GestureRecognizers>
                                    </Image>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
