<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusReservationMauiApp.Views.BoletoPage">
    
    <ContentPage.Content>
        <Grid RowDefinitions=".15*,1.5*">
        
            <Grid Grid.Row="0"
                  Padding="10"
                  BackgroundColor="#f5f5f5"
                  ColumnDefinitions="*, Auto">
                <Label Text="Boletos Comprados"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center"
                       Grid.Column="0" />
            </Grid>

            <!-- Reservas List -->
            <ScrollView Grid.Row="1">
                <Grid x:Name="BoletosGrid" Padding="10" RowSpacing="10">
                    <!-- Las reservas dinámicas se agregarán aquí desde el código detrás -->
                </Grid>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>