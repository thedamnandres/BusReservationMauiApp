<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusReservationMauiApp.Views.Reservas.ReservaPage"
             xmlns:vm="clr-namespace:BusReservationMauiApp.ViewModels">
    
    <ContentPage.Content>
        <Grid RowDefinitions=".15*,1.5*">
            
            <Grid Grid.Row="0"
                  Padding="10"
                  BackgroundColor="#f5f5f5"
                  ColumnDefinitions="*, Auto">
                <Label Text="Reservas"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                
            </Grid>

            <CollectionView Grid.Row="1" ItemsSource="{Binding Reservas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10"
                               Padding="15"
                               Margin="10,5"
                               BackgroundColor="White"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*,*,*"
                                  RowDefinitions="Auto,Auto">
                                <Label Text="{Binding Asiento}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       HorizontalOptions="Start" />
                                <Label Text="{Binding FechaReserva, StringFormat='Fecha: {0:dd/MM/yyyy}'}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       Grid.Row="0"
                                       Grid.Column="1"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding EstadoReserva}"
                                       FontSize="14"
                                       TextColor="{Binding EstadoReserva, Converter={StaticResource EstadoColorConverter}}"
                                       Grid.Row="0"
                                       Grid.Column="2"
                                       HorizontalOptions="End" />
                                <Label Text="{Binding Precio, StringFormat='Precio: ${0:F2}'}"
                                       FontSize="14"
                                       TextColor="Gray"
                                       Grid.Row="1"
                                       Grid.ColumnSpan="3"
                                       HorizontalOptions="Start" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>